<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_fragment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dirty_white"
    tools:context=".view.MovieFragment">

    <LinearLayout
        android:id="@+id/top_layout_movie_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_item_selected"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/movie_details_layout"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="20sp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/movie_title_tv_fragment_movies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movie_title"
                android:textColor="@color/textWhiteColor"
                android:textSize="30sp" />

            <LinearLayout
                android:id="@+id/rating_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="15sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rating"
                    android:textColor="@color/textWhiteColor"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/rating_movie_tv_fragment_movies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:text="@string/rating"
                    android:textColor="@color/textWhiteColor"
                    android:textSize="25sp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/poster_movie_fragment"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:layout_weight="1"
            android:contentDescription="@string/poster" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_layout_movie_fragment"
        android:layout_marginStart="10sp"
        android:layout_marginTop="15sp"
        android:layout_marginEnd="10sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movie_overview"
                android:textColor="@color/textBlackColor"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/overview_tv_movie_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="@string/movie_overview"
                android:textColor="@color/textBlackColor"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>